<%= form_for(:authentication, :url => {:action => 'menu'}) do |f| %>

    <div>
      <% if !flash[:notice].blank? %>
          <% flash[:notice].each { |error_msg| %> <p><%= error_msg %></p>
          <% } %>
      <% end %>
      <div class='login_box'>
        <table>
          <tr>
            <td><%= f.text_field(:username) %></td>
          </tr>

          <tr>
            <td>
              <%= f.text_field(:password, :default_value => 'Password') %></td>
          </tr>
        </table>
        <%= submit_tag('Sign in', :class => 'button') %>
      </div>
    </div>
<% end %>



